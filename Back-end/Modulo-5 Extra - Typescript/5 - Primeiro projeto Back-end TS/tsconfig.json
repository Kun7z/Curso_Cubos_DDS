{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}